@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using KaiserStore.Models;
@{
    List<Payment> payment = ViewData["payment"] != null ? (List<Payment>)ViewData["payment"] : null;


}
@{
    ViewData["page"] = "listorder";
    ViewData["Title"] = "Order";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutSidebar.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/css/StyleAdminInventory.css" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">

        <h3>Danh sách đơn hàng</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>TÊN NGƯỜI MUA</th>
                    <th>SỐ LƯỢNG</th>
                    <th>TỔNG TIỀN</th>
                    <th>NGÀY MUA</th>
                    <th>TRẠNG THÁI</th>
                    <th>HÀNH ĐỘNG</th>

                </tr>
            </thead>


            @for (int i = payment.Count() - 1; i>= 0; i--)
            {

                <tbody>

                    <tr>
                        <td>@payment[i].Name</td>
                        <td>@payment[i].Total</td>
                        <td>@string.Format("{0:#,0}",@payment[i].TotalPrice)</td>
                        <td>@payment[i].DateTime</td>
                        <td>@payment[i].status</td>
                        <td><a asp-action="Details" asp-route-id="@payment[i].PaymentId"><i class="fa-solid fa-eye fa-xl"></i></a></td>

                    <tr>
                </tbody>
            }


        </table>

    </div>





</body>
</html>



