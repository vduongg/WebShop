@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{

    List<KaiserStore.Models.HomeItem> HomeItem = ViewData["HomeItem"] != null ? (List<KaiserStore.Models.HomeItem>)ViewData["HomeItem"] : null;
}


@{
    ViewData["page"] = "home";
    ViewData["Title"] = "Kaiser Store";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutSidebar.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Kaiser Store • Admin</title>
    <link rel="stylesheet" href="~/css/StyleAdminHome.css" />
</head>
<body>
    <div class="wrap-box">
       
        @foreach(var item in HomeItem)
        {
            <div class="box" style="background-color: @item.color;">
                
                
                    <div class="icon">
                        <i class="@item.icon"></i>
                    </div>
                    <div class="title">
                        <label>@item.name:</label>
                    <label>@string.Format("{0:#,0}",@item.value)</label>
                    </div>
                
            </div>

        }
       
        
    
    </div>
   
    

 
    

   
</body>
</html>
