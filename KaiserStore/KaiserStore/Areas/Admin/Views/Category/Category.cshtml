@model List<KaiserStore.Models.CategoryVM>;

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["page"] = "category";
    ViewData["Title"] = "Category";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutSidebar.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    
    <link rel="stylesheet" href="~/css/StyleAdminCategory.css" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
</head>
<body>
    <div class="category">
        <div class="category-header">
            <h3>
                Danh mục sản phẩm
            </h3>
            <div class="right">
                <div class="search-input">
                    <input type="text" placeholder="Tìm kiếm..." />
                </div>
                <form class="add-category" asp-action="Create" >
                    <button type="submit"> Thêm danh mục</button>
                </form>

            </div>

        </div>

        <div class="category-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>ID</th>
                        <th>TÊN DANH MỤC</th>
                        <th>TRẠNG THÁI</th>
                        <th>HÀNH ĐỘNG</th>
                    </tr>
                </thead>
                <tbody>
                    
                    @for(int i = 0; i< Model.Count(); i++)
                    {
                        <form asp-action="Category" method="post">
                        <tr>
                            
                            <td>@(i+1)</td>
                            <td>@Model[i].id </td>
                            <td>@Model[i].namecategory</td>
                            <td>@Model[i].status</td>
                            <td>
                                <div style="display: flex; justify-content: center">
                                    <a  asp-route-id="@Model[i].id" asp-action="Edit"><i class="fa-solid fa-pen-to-square" style="color: black;"></i></a>
                                    <a  asp-route-id="@Model[i].id" asp-action="Delete"><i class="fa-solid fa-trash-can" style="color: black;"></i></a>
                                </div>
                            </td>
                        </tr>


                        </form>
                       
                    }
                    
                  
                </tbody>
            </table>
        </div>

    </div>
    <script src="~/js/AdminCategory.js"></script>
</body>
</html>



