@model KaiserStore.Models.ProductsVM;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using KaiserStore.Models;
@{
    List<ProductType> productType = ViewData["productType"] != null ? (List<ProductType>)ViewData["productType"] : null;
}

@{
    ViewData["page"] = "product";
    ViewData["Title"] = "Sửa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutSidebar.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <style>
        .wrapper{
            width: 100%;
            height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }
        div{
            margin-top: 5px;
        }
        form {
            justify-content: center;
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        form input {
                margin-bottom: 20px;
                padding: 5px 0 5px 5px;
           
        }

            form select {
                margin-bottom: 20px;
                padding: 5px 0 5px 5px;
            }
        span {
            margin-right: 10px;
        }

        .describe{
            margin-bottom: 20px;
            padding: 5px 5px 5px 5px;
        }
        form button{
            color: white;
            background-color: black;
            padding: 10px 20px 10px 20px;
            margin-bottom: 50px;
            margin-top: 50px;

        }

    </style>
</head>
<body>


    <div class="wrapper">
        <form action="Edit" enctype="multipart/form-data" method="post">

            <h3>Sửa sản phẩm</h3>
            <input asp-for="Id" type="hidden" />
            <div>
                <span>Tên sản phẩm</span>
                <input asp-for="producdName" />
            </div>
            <div>
                <span>Giá sản phẩm</span>
                <input asp-for="producdPrice" />
            </div>
            <div>

                <span>Loại sản phẩm</span>
                <select asp-for="ProductTypeId">
                   
                    @foreach (var item in productType)
                    {
                        <option label="@item.Name">@item.Id</option>
                       
                    }
                </select>
            </div>
            <div class="describe">
         
                  <textarea asp-for="describe" cols="50" rows="20"></textarea>
            </div>
            <input asp-for="status" value="active" hidden />
            <div style="display: flex; flex-direction: column;">
                <span>Ảnh sản phẩm</span>
                <img src="@String.Format("data:image/jpg;base64,{0}",Convert.ToBase64String(Model.dataimage))" width="250" height="250" />
                <input type="hidden" asp-for="dataimage" value="@Convert.ToBase64String(Model.dataimage)" />
                <input type="file" asp-for="file" />
            </div>

            <button type="submit">Lưu sản phẩm  </button>

        </form>



    </div>

</body>
</html>






