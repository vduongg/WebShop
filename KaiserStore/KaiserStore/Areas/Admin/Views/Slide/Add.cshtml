@model KaiserStore.Models.Slide;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["page"] = "slide";
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutSidebar.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <style>
        form input {
            margin-bottom: 20px;
            padding: 5px 0 5px 5px;
        }

        form select {
            margin-bottom: 20px;
            padding: 5px 0 5px 5px;
        }

        form textarea {
            margin-bottom: 20px;
            padding: 5px 5px 5px 5px;
        }

        form button {
            color: white;
            background-color: black;
            padding: 10px 20px 10px 20px;
            margin-bottom: 50px;
            margin-top: 50px;
        }

    </style>

</head>
<body>
    <div style="width: 100%; height: 100vh; display: flex; align-items:center; justify-content: center;">
        <form style="display: flex; flex-direction: column; align-items: center;" class="productForm" enctype="multipart/form-data" method="post">
            <h3 style="margin-bottom: 10px"> THÊM SLIDE</h3>
            <input style="margin-bottom: 10px" placeholder="Tên slide" asp-for="name" />
            <input hidden value="active" asp-for="status" />
            <input style="margin-bottom: 10px" type="file" asp-for="file" />
            <button style="margin-bottom: 10px" type="submit">Upload</button>

        </form>
    </div>





</body>
</html>

