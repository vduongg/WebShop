@{
    List<CategoryVM> categories = ViewData["category"] != null ? (List<CategoryVM>)ViewData["category"] : null;
    List<ProductsVM> product = ViewData["product"] != null ? (List<ProductsVM>)ViewData["product"] : null;
}
@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_LayoutNavbar.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/css/Category.css" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">
        <div class="category-right">

            @for( int i = product.Count() -1; i>= 0; i--)
            {
                if(product[i].ProductType.status == "active")
                {
                    <div class="wrapper-product">
                        <a class="product" asp-action="Product" asp-controller="Home" asp-route-id="@product[i].Id">
                            <div class="product-img">
                                <img width="310px" height="310px" src="@String.Format("data:image/jpg;base64,{0}",Convert.ToBase64String(product[i].dataimage))" />
                            </div>

                            <span class="product-name">@product[i].producdName </span>
                            <span class="product-price">@product[i].producdPrice</span>
                            <span class="product-sold">Đã bán: @product[i].sold sản phẩm</span>
                            @*  <button class="add-cart" id="add-cart"> <img src="~/image/add-cart.svg" /> </button> *@
                        </a>

                    </div>

                }
                


            }





        </div>
    </div>





</body>
</html>
